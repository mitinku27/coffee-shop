<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/menuback">

tools:context="com.example.home.cafecoffeeday.PaymentActivity">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cash_payment"
        android:layout_marginTop="136dp"
        android:id="@+id/imageButtonCashPay"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Instant Pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:id="@+id/textView3"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:text="Pay with BCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bcash_pay"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="29dp"
        android:id="@+id/imageButtonBCashPay"
        android:layout_alignEnd="@+id/imageButtonCashPay"
        android:layout_alignStart="@+id/imageButtonCashPay" />

</RelativeLayout>
