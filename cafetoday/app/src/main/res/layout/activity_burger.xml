<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_Burger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.home.cafecoffeeday.BurgerActivity"
        android:background="@drawable/menuback">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_burger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.home.cafecoffeeday.BurgerActivity"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                >



                <CheckBox
                    android:text="Hot Dog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBoxBuffalo"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:text="Price:180Tk"
                    android:textSize="14sp"
                    android:paddingLeft="4dp"
                    android:textStyle="normal|bold|italic" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="93dp"
                    android:layout_weight="1"

                    android:inputType="number"
                    android:id="@+id/editTextBuffaloQuantity"
                    android:hint="Quantity" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/buffalo"
                    android:id="@+id/imageView" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">


                <CheckBox
                    android:text="Cheese Burger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/checkBoxCheeseBurger"
                    android:gravity="center_vertical|center|start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:paddingLeft="4dp"
                    android:text="Price:150Tk"
                    android:textSize="14sp"
                    android:textStyle="normal|bold|italic" />
                <EditText

                    android:layout_width="0dp"
                    android:layout_height="93dp"
                    android:inputType="number"
                    android:id="@+id/editTextCheeseBurger"
                    android:layout_weight="1"
                    android:hint="Quantity" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cheese_burger"
                    android:id="@+id/imageViewCheeseBurger" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">


                <CheckBox
                    android:text="Spicy Burger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/checkboxSalmonBurger"
                    android:gravity="center_vertical|center|start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView6"
                    android:paddingLeft="4dp"
                    android:layout_weight="1"
                    android:text="Price:160Tk"
                    android:textSize="14sp"
                    android:textStyle="normal|bold|italic" />

                <EditText

                    android:layout_width="0dp"
                    android:layout_height="93dp"
                    android:inputType="number"
                    android:id="@+id/editTextSalmonBurger"
                    android:layout_weight="1"
                    android:hint="Quantity" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/salmon_burger"
                    android:id="@+id/imageSalmonBurger" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">


                <CheckBox
                    android:text="Vegitable Burger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.19"
                    android:id="@+id/checkboxVegBurger"
                    android:gravity="center_vertical|center|start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:paddingLeft="4dp"
                    android:text="Price:120Tk"
                    android:textSize="14sp"
                    android:textStyle="normal|bold|italic" />

                <EditText

                    android:layout_width="0dp"
                    android:layout_height="93dp"
                    android:inputType="number"
                    android:id="@+id/editTextVegBurger"
                    android:layout_weight="1"
                    android:hint="Quantity" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/veg_burger"
                    android:id="@+id/imageVegBurger" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">


                <CheckBox
                    android:text="Angus Burger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/checkboxAngusBurger"
                    android:gravity="center_vertical|center|start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView1"
                    android:paddingLeft="4dp"
                    android:layout_weight="1"
                    android:text="Price:130Tk"
                    android:textSize="14sp"
                    android:textStyle="normal|bold|italic" />

                <EditText

                    android:layout_width="0dp"
                    android:layout_height="93dp"
                    android:inputType="number"
                    android:id="@+id/editTextAngusBurger"
                    android:layout_weight="1"
                    android:hint="Quantity" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/angus"
                    android:id="@+id/imageAngusBurger" />

            </LinearLayout>


            <Button
                android:text="Order"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:id="@+id/buttonOrder" />



        </LinearLayout>


    </RelativeLayout>
</ScrollView>